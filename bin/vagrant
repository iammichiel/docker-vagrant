#!/usr/bin/env bash

# Links the personnal folder with the shared folder
rm -rf /home/vagrant/projects
ln -fs /data /home/vagrant/projects

# Update the system
locale-gen fr_FR.UTF-8

# Install the packages
apt-get update && apt-get install -y php5-cli php5-curl vim git htop linux-image-extra-virtual linux-headers-generic linux-headers-virtual linux-image-virtual mysql-client zsh curl
curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Install Docker
curl -sSL https://get.docker.io/ubuntu/ | sudo sh
usermod -a -G docker vagrant

curl -L https://github.com/docker/compose/releases/download/1.4.2/docker-compose-`uname -s`-`uname -m` > /usr/local/bin/docker-compose
chmod +x /usr/local/bin/docker-compose

service docker restart
