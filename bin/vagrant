#!/usr/bin/env bash

# Links the personnal folder with the shared folder
rm -rf /home/vagrant/projects
ln -fs /vagrant /home/vagrant/projects

# Update the system
locale-gen fr_FR.UTF-8
apt-get update && apt-get upgrade -y

# Install the packages
apt-get install -y php5-cli php5-curl git htop linux-image-extra-virtual linux-headers-generic linux-headers-virtual linux-image-virtual mysql-client zsh
curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Install Docker
curl -sSL https://get.docker.io/ubuntu/ | sudo sh
usermod -a -G docker vagrant

sed -i "s,#DOCKER_OPTS,DOCKER_OPTS,g" /etc/default/docker

service docker restart
